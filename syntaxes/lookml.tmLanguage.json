{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LookML",
	"scopeName": "source.lkml",
	"patterns": [
		{
			"include": "#lookml"
		}
	],
	"repository": {
		"lookml": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#sql_block"
				},
				{
					"include": "#sql_terminator"
				},
				{
					"include": "#substitution"
				}
			]
		},
		"comments": {
			"name": "comment.line.number-sign.lkml",
			"match": "#.*"
		},
		"liquid_variables": {
			"name": "meta.embedded.liquid.lookml",
			"captures": {
				"1": {
					"name": "punctuation.definition.template-expression.begin.lkml"
				},
				"2": {
					"name": "support.variable.liquid.lookml"
				},
				"3": {
					"name": "punctuation.definition.template-expression.end.lkml"
				}
			},
			"match": "(\\{\\{)(.*?)(\\}\\})"
		},
		"strings": {
			"name": "string.quoted.double.lkml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"include": "#liquid_variables"
				},
				{
					"name": "constant.character.escape.lkml",
					"match": "\\\\."
				}
			]
		},
		"substitution": {
			"name": "variable.other.lookml",
			"captures": {
				"1": {
					"name": "punctuation.definition.variable.begin.lkml"
				},
				"2": {
					"name": "variable.other.table.lkml"
				},
				"3": {
					"name": "punctuation.definition.variable.end.lkml"
				}
			},
			"match": "(\\$\\{)(.*?)(\\})",
			"comment": "Matches the ${...} substitution syntax."
		},
		"sql_terminator": {
			"name": "punctuation.terminator.lookml",
			"match": ";;",
			"comment": "Matches the double semicolon terminator."
		},
		"sql_block": {
			"name": "meta.embedded.block.sql.lookml",
			"comment": "This scope allows VS Code to inject SQL grammar.",
			"begin": "(?i)\\b(sql|sql_on|html):",
			"beginCaptures": {
				"1": {
					"name": "keyword.other.lookml"
				}
			},
			"end": "(?=;;)",
			"patterns": [
				{
					"include": "#substitution"
				},
				{
					"include": "source.sql"
				}
			]
		}
	}
}