{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LookML",
	"patterns": [
		{
			"include": "#fields"
		},
		{
			"include": "#sql"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment-line"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"fields": {
			"contentName": "source.lookml.test",
			"begin": "(dimension:|measure:|filter:|paremter:).*?{",
			"end": "}\\n",
			"beginCaptures": {
				"0": {
					"patterns": [{
						"match": "\\b(dimension|measure|filter|parameter)\\b",
						"name": "keyword.control.lookml"
					}]
				}
			},
			"patterns": [{
				"name": "keyword.control.lookml",
				"match": "\\b()\\b"
			}]
		},
		"variables": {
			"name": "source.lookml.variable.language",
			"match": "\\${.*?}",
			"patterns": [{
				"name": "constant.character.escape.lookml",
				"match": "\\\\."
			}]
		},
		"lookml-fields": {
			"contentName": "support.variable",
			"begin": "\\b(dimension|measure):",
			"end": "{",
			"patterns": [{
				"name": "constant.character.escape.lookml",
				"match": "\\\\."
			}]
		},
		"types" : {
			"name": "support.type",
			"match": "\\b(yesno|yes|no|epoch|timestamp|datetime|date|yyyymmdd|feet|kilometers|meters|miles|nautical_miles|yards|classic|interval|integer|relational|number|string|count|average)\\b",
			"patterns": [{}]
		},
		"comment-line": {
			"name": "comment.line.block",
			"begin": "(//|#)",
			"end": "\n",
			"patterns": [{}]
		},
		"strings": {
			"name": "string.quoted.double.lookml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lookml",
					"match": "\\\\."
				},
				{
					"name": "constant.character.escape.lookml",
					"match": "#."
				}
			]
		},
		"sql": {
			"nameContent": "source.sql",
			"begin": "\\b(sql|sql_on|sql_where)\\b",
			"beginCaptures": {
				"0": {
					"name": "keyword.control.lookml"
				}
			},
			"end": ";;",
			"patterns": [
				{
					"name": "support.variable",
					"begin": "\\$\\{",
					"end": "}"
				},
				{
					"include": "source.sql"
				},
				{
					"name": "constant.character.escape.lookml",
					"match": "\\\\."
				},
				{
					"name": "constant.character.escape.lookml",
					"match": "#."
				}
			]
		},
		"sets": {
			"nameContent": "source.",
			"patterns": []
		}
	},
	"scopeName": "source.lkml"
}