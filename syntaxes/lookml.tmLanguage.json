{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LookML",
	"scopeName": "source.lkml",
	"patterns": [
		{
			"include": "#lookml"
		}
	],
	"repository": {
		"lookml": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#blocks"
				}
			]
		},
		"comments": {
			"name": "comment.line.number-sign.lkml",
			"match": "#.*"
		},
		"strings": {
			"name": "string.quoted.double.lkml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lkml",
					"match": "\\\\."
				}
			]
		},
		"substitution": {
			"name": "variable.other.lookml",
			"captures": {
				"1": {
					"name": "punctuation.definition.variable.begin.lkml"
				},
				"2": {
					"name": "variable.other.table.lkml"
				},
				"3": {
					"name": "punctuation.definition.variable.end.lkml"
				}
			},
			"match": "(\\$\\{)(.*?)(\\})",
			"comment": "Matches the ${...} substitution syntax."
		},
		"sql_terminator": {
			"name": "punctuation.terminator.lookml",
			"match": ";;",
			"comment": "Matches the double semicolon terminator."
		},
		"lookml_keywords": {
			"name": "keyword.control.lookml",
			"match": "\\b(view|measure|dimension|dimension_group|filter|parameter|derived_table|explore|join)\\b",
			"comment": "Top-level block keywords."
		},
		"parameter_keywords": {
			"name": "keyword.other.lookml",
			"match": "\\b(type|label|description|sql|sql_on|primary_key|hidden|timeframes|drill_fields|value_format|value_format_name|html|link|sql_table_name|indexes|type|map_layer_name):",
			"comment": "Common parameter keywords, identified by the trailing colon."
		},
		"lookml_values": {
			"name": "support.constant.lookml",
			"match": "\\b(yes|no|string|number|time|count|average|sum|count_distinct)\\b",
			"comment": "Common predefined values for parameters like 'type' or 'hidden'."
		},
		"sql_block": {
			"name": "meta.embedded.block.sql.lookml",
			"comment": "This scope allows VS Code to inject SQL grammar.",
			"begin": "(?i)\\b(sql|sql_on|html):",
			"beginCaptures": {
				"1": {
					"name": "keyword.other.lookml"
				}
			},
			"end": "(?=;;)",
			"patterns": [
				{
					"include": "#substitution"
				},
				{
					"include": "source.sql"
				}
			]
		},
		"block_content": {
			"comment": "Patterns that can exist inside any LookML block.",
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#parameter_keywords"
				},
				{
					"include": "#lookml_values"
				},
				{
					"include": "#sql_block"
				},
				{
					"include": "#sql_terminator"
				},
				{
					"include": "#substitution"
				},
				{
					"include": "#blocks"
				}
			]
		},
		"blocks": {
			"comment": "Defines a generic LookML block with balanced braces.",
			"begin": "(\\w+):(?:\\s*(\\w+))?\\s*\\{",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.lookml"
				},
				"2": {
					"name": "entity.name.function.lookml"
				}
			},
			"end": "\\}",
			"patterns": [
				{
					"include": "#block_content"
				}
			]
		}
	}
}